= form_for authorization do |f|
  - if authorization.errors.any?
    #error_explanation
      %h2= "#{pluralize(@authorization.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - authorization.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.fields_for :user do |builder|
      = builder.label :email
      = builder.text_field :email
      = f.submit 'Send password'

  / .actions
  /   = f.submit 'Send password'
    